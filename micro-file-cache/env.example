# Основные настройки приложения
NODE_ENV=development
LISTEN_HOST=localhost
LISTEN_PORT=80

# Аутентификация
# Включить аутентификацию (true/false)
AUTH_ENABLED=false
# Секретный ключ для аутентификации (минимум 32 символа)
AUTH_SECRET_KEY=your-secret-key-change-in-production-12345678901234567890

# Пути к хранилищу файлов и метаданных
# В продакшене используйте абсолютные пути
# Для разработки: ../test-data/micro-file-cache/storage
# Для продакшена: /app/storage
STORAGE_BASE_PATH=../test-data/micro-file-cache/storage

# Ограничения загрузки файлов
# Максимальный размер файла в байтах (100MB)
MAX_FILE_SIZE=104857600

# Разрешенные MIME типы (пустой массив = разрешены все типы)
# Примеры:
# ALLOWED_MIME_TYPES=["image/jpeg","image/png","image/gif","image/webp"]
# ALLOWED_MIME_TYPES=["application/pdf","text/plain","application/json","text/csv"]
ALLOWED_MIME_TYPES=

# Формат организации файлов по датам
DATE_FORMAT=YYYY-MM

# Включить дедупликацию файлов
ENABLE_DEDUPLICATION=true

# Максимальный TTL в минутах (7 дней)
TTL_MAX_MINUTES=10080

# Настройки автоматической очистки
# Интервал проверки устаревших файлов в миллисекундах (1 минута)
CLEANUP_INTERVAL=60000

# Настройки логирования
LOG_LEVEL=info

# Настройки безопасности
# Максимальное количество файлов в кэше (0 = без ограничений)
MAX_FILES_COUNT=10000

# Максимальный общий размер хранилища в байтах (0 = без ограничений)
MAX_STORAGE_SIZE=1073741824

# Настройки для продакшена (раскомментируйте при необходимости)
# NODE_ENV=production
# LISTEN_HOST=0.0.0.0
# LISTEN_PORT=80
# AUTH_TOKEN=your-production-secret-token
# STORAGE_DIR=/app/storage
# DATA_DIR=/app/data
# FILE_MAX_SIZE_MB=50
# TTL_MAX_MINUTES=20160
# CLEANUP_INTERVAL=300000
# LOG_LEVEL=warn
# MAX_FILES_COUNT=50000
# MAX_STORAGE_SIZE=5368709120
