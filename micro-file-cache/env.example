# Основные настройки приложения
NODE_ENV=development
PORT=3000

# Аутентификация
# Bearer токен для аутентификации (если не указан, аутентификация отключена)
AUTH_TOKEN=your-secret-token

# Пути к хранилищу файлов и метаданных
# В продакшене используйте абсолютные пути
STORAGE_DIR=../test-data/micro-file-cache/storage
DATA_DIR=../test-data/micro-file-cache/data

# Ограничения загрузки файлов
# Максимальный размер файла в мегабайтах
FILE_MAX_SIZE_MB=10

# Максимальный TTL в минутах (7 дней)
TTL_MAX_MINUTES=10080

# Настройки автоматической очистки
# Интервал проверки устаревших файлов в миллисекундах (1 минута)
CLEANUP_INTERVAL=60000

# Настройки логирования
LOG_LEVEL=info

# Настройки безопасности
# Максимальное количество файлов в кэше (0 = без ограничений)
MAX_FILES_COUNT=10000

# Максимальный общий размер хранилища в байтах (0 = без ограничений)
MAX_STORAGE_SIZE=1073741824

# Настройки для продакшена (раскомментируйте при необходимости)
# NODE_ENV=production
# PORT=3000
# AUTH_TOKEN=your-production-secret-token
# STORAGE_DIR=/app/storage
# DATA_DIR=/app/data
# FILE_MAX_SIZE_MB=50
# TTL_MAX_MINUTES=20160
# CLEANUP_INTERVAL=300000
# LOG_LEVEL=warn
# MAX_FILES_COUNT=50000
# MAX_STORAGE_SIZE=5368709120
