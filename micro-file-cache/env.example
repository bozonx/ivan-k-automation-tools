# Основные настройки приложения
NODE_ENV=development
PORT=3000

# Пути к хранилищу файлов и метаданных
# В продакшене используйте абсолютные пути
STORAGE_DIR=../test-data/micro-file-cache/storage
DATA_DIR=../test-data/micro-file-cache/data

# Ограничения загрузки файлов
# Максимальный размер файла в байтах (10MB)
MAX_FILE_SIZE=10485760

# Разрешенные MIME типы файлов (через запятую)
# Поддерживаются wildcards (например, image/*)
ALLOWED_MIME_TYPES=image/*,application/pdf,text/*,application/zip,application/json

# Настройки автоматической очистки
# Интервал проверки устаревших файлов в миллисекундах (1 минута)
CLEANUP_INTERVAL=60000

# Настройки логирования
LOG_LEVEL=info

# Настройки безопасности
# Максимальное количество файлов в кэше (0 = без ограничений)
MAX_FILES_COUNT=10000

# Максимальный общий размер хранилища в байтах (0 = без ограничений)
MAX_STORAGE_SIZE=1073741824

