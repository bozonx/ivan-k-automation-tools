###### Обязательные настройки
# Пути к хранилищу файлов и метаданных
# В продакшене используйте абсолютные пути
# Для разработки: ../test-data/micro-file-cache/storage
# Для продакшена: /app/storage
STORAGE_DIR=../test-data/micro-file-cache/storage

# Секретный ключ для аутентификации
# в production режиме минимум 32 символа
AUTH_TOKEN=your-secret-key

###### Основные настройки приложения
# Режим работы приложения (development/production/test)
NODE_ENV=production
LISTEN_HOST=localhost
LISTEN_PORT=3000

# Часовой пояс в котором будут храниться данные
TZ=UTC

# Аутентификация
# Включить аутентификацию (true/false)
AUTH_ENABLED=true

# Ограничения загрузки файлов
# Максимальный размер файла в мегабайтах (100MB)
MAX_FILE_SIZE_MB=100

# Разрешенные MIME типы (пустой массив = разрешены все типы)
# Примеры:
# ALLOWED_MIME_TYPES=["image/jpeg","image/png","image/gif","image/webp"]
# ALLOWED_MIME_TYPES=["application/pdf","text/plain","application/json","text/csv"]
ALLOWED_MIME_TYPES=

# Формат организации файлов по датам
DATE_FORMAT=YYYY-MM

# Включить дедупликацию файлов
ENABLE_DEDUPLICATION=true

# TTL настройки (в минутах)
MIN_TTL_MIN=60

# Настройки автоматической очистки
# Cron выражение для очистки (по умолчанию каждые 10 минут)
CLEANUP_CRON=0 */10 * * * *

# Настройки безопасности
# Максимальное количество файлов в кэше (0 = без ограничений)
MAX_FILES_COUNT=10000

# Максимальный общий размер хранилища в мегабайтах (0 = без ограничений)
MAX_STORAGE_SIZE_MB=1000

# API настройки
API_BASE_PATH=api
API_VERSION=v1

# Настройки логирования (error/warn/info/debug/verbose)
LOG_LEVEL=info

# CORS настройки
CORS_ORIGIN=true
